<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0</TargetFrameworks>
    <RootNamespace>Zenseless.OpenTK.GUI</RootNamespace>
    <Nullable>enable</Nullable>
    <PublishDocumentationFile>true</PublishDocumentationFile>
    <DocumentationFile>bin/Zenseless.OpenTK.GUI.xml</DocumentationFile>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup>
    <PackageProjectUrl>https://github.com/danielscherzer/Zenseless.OpenTK.GUI</PackageProjectUrl>
    <PackageTags>OpenTK OpenGL .net Gui ImGui</PackageTags>
    <PackageReleaseNotes>Auto generated by AppVeyor</PackageReleaseNotes>
    <Description>ImGui for OpenTK.</Description>
    <Company>Daniel Scherzer</Company>
    <Authors>Daniel Scherzer</Authors>
    <Copyright>Copyright Â© 2023 Daniel Scherzer</Copyright>
    <Version>0.1.0</Version>
    <RepositoryUrl>https://github.com/danielscherzer/Zenseless.OpenTK.GUI</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <PropertyGroup>
    <!-- Include symbol files (*.pdb) in the built .nupkg -->
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
    <!--<IncludeSymbols>true</IncludeSymbols>-->
    <!--<SymbolPackageFormat>snupkg</SymbolPackageFormat>-->
    <DebugSymbols>true</DebugSymbols>
    <DebugType>embedded</DebugType>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="assets\*.*" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Zenseless.OpenTK" Version="0.1.88" />
    <PackageReference Include="ImGui.NET" Version="1.91.6.1" />
  </ItemGroup>

  <Target Name="PostPack" AfterTargets="Pack" Condition=" '$(APPVEYOR)' == '' ">
    <Exec Command="dotnet nuget push bin\**.nupkg  -s $(AppData)\..\Local\Temp\NuGetScratch" />
  </Target>

</Project>
